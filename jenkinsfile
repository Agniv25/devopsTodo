pipeline {
    agent any

    environment {
        NODE_VERSION = '14.17.0' // specify the Node.js version you are using
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your source control
                git 'https://github.com/Agniv25/todo-app.git'
            }
        }
        
        stage('Install Node.js') {
            steps {
                // Install Node.js
                script {
                    def nodeHome = tool name: "node", type: 'NodeJSInstallation'
                    env.PATH = "${nodeHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install npm dependencies
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                // Run tests (if you have any)
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                // Build the application
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy the application (this step will depend on your deployment strategy)
                // For example, you could deploy to a static file server, S3, etc.
                echo 'Deploying application...'
                // Example: Deploy to a directory on the Jenkins server
                // sh 'cp -r build/* /path/to/deployment/directory/'
            }
        }
    }

    post {
        always {
            // Clean up after the build
            cleanWs()
        }
        success {
            echo 'Build and deployment succeeded!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}

